{
    "configurations": [
        
        
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.run",
                "MyTestFunction"
            ]
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}"
        },
        {
            "name": "Go Mockery",
            "type": "node-terminal",
            "request": "launch",
            "command": "mockery -all -dir \"pkg\" -keeptree  && mockery -all -dir \"cmd\" -keeptree",              
        }
    ]
}